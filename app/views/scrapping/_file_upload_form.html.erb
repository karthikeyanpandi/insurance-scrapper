<div class="col-md-5  my-4" xmlns="http://www.w3.org/1999/html">

  <div class="card card-outline-secondary shadow-sm">
    <div class="card-header">
      Upload Users
    </div>

    <%= form_tag({action: :pull_data}, id: "upload_form", multipart: true, :remote=>true) do %>
        <div class="card-body clearfix">
          <div class="custom-file">
            <%= file_field_tag :file %>
          </div>
        </div>

        <div class="card-footer">
          <div class="float-right">
            <%= submit_tag("Reset", { :name => 'reset', :id => 'reset', :type => 'reset', :class => 'btn btn-secondary'}) %>
            <%= submit_tag("Upload", :class=>'btn btn-primary') %>
          </div>
        </div>
    <% end %>

  </div>
</div>