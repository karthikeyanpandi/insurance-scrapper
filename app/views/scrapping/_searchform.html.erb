<div class="mb-3 row">
<div class="form-container searchform col-md-9">
<div class="card card-outline-secondary my-4">
<div class="card-header">
Search 
</div>
<%= form_tag("/scrapping/pull_data", method: "get" , id: "searchclaim", name: "searchclaim", :remote=>true) do |form| %>
<div class="card-body clearfix">
    <div class="form-row"> 
        <div class="col-8"> 
            <div class="form-row">   
                <div class="col-6">  
                <%= label_tag(:q, "From Date:") %> 
                <%= date_field(:fromdate, "",:class=>'form-control form-control-sm required')%>   
                </div>
                <div class="col-6"> 
                <%= label_tag(:q, "To Date:") %> 
                <%= date_field(:todate, "",:class=>'form-control form-control-sm required')%>  
                </div>
            </div> 
        </div>
        <div class="col-4">  
            <div class="form-row">
                <div class="form-group col">
                    <%= label_tag(:q, "Account No:") %> 
                    <%= text_field_tag(:accountno, "",:class=>'form-control form-control-sm')%>  
                </div> 
            </div>
        </div>
    </div> 
     
    

    <div class="form-row">
    <div class="form-group col-4">
        <%= label_tag(:q, "Member ID:") %> 
        <%= text_field_tag(:memberid, "",:class=>'form-control form-control-sm required')%> 
    </div>
    <div class="form-group col-4">
        <%= label_tag(:q, "Member Name:") %> 
        <%= text_field_tag(:membername, "",:class=>'form-control form-control-sm')%>  
    </div>
    <div class="form-group col-4">
        <%= label_tag(:q, "Member DOB:") %> 
        <%= date_field(:memberdob, "",:class=>'form-control form-control-sm')%>  
    </div>
    </div>

    <div class="form-row">
    <div class="form-group col-4">
        <%= label_tag(:q, "Service Provider:") %> 
        <%= text_field_tag(:serviceprovider, "",:class=>'form-control form-control-sm')%>  
    </div>
    <div class="form-group col-4">
        <%= label_tag(:q, "Service NPI:") %> 
        <%= text_field_tag(:servicenpi, "",:class=>'form-control form-control-sm')%>  
    </div>
    </div>

    <div class="float-right">
        <%= submit_tag("Reset", { :name => 'reset', :id => 'reset', :type => 'reset', :class => 'btn btn-secondary'}) %>    
        <%= submit_tag("Search", :class=>'btn btn-primary') %>
    </div>

</form>
<% end %>
</div>
</div>
</div>
</div>