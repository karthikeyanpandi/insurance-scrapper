<div class="mb-2 row animated fadeIn delay-2s  mt-4 ">
  <div class="form-container searchform col-md-7">
    <div class="card card-outline-secondary shadow-sm">
      <div class="card-header">
        Search
      </div>
      <%= form_tag("/scrapping/pull_data", method: "get" , id: "searchclaim", name: "searchclaim", :remote=>true) do |form| %>
      <div class="card-body clearfix">
        <div id="msg"></div>

        <div class="form-row">
          <div class="form-group form-group col-6">
            <%= label_tag(:q, "User Name:") %>
            <%= text_field_tag(:username, "",:class=>'form-control form-control-sm required')%>
          </div>
          <div class="form-group col-6">
            <%= label_tag(:q, "Password:") %>
            <%= password_field_tag(:password, "",:class=>'form-control form-control-sm required')%>
          </div>
        </div>

        <div class="form-row">
          <div class="col-8">
            <div class="form-row">
              <div class="col-6">
                <%= label_tag(:q, "From Date:") %>
                <%= date_field(:fromdate, "",:class=>'form-control form-control-sm required')%>
              </div>
              <div class="col-6">
                <%= label_tag(:q, "To Date:") %>
                <%= date_field(:todate, "",:class=>'form-control form-control-sm required')%>
              </div>
            </div>
          </div>
          <div class="col-4">
            <div class="form-row">
              <div class="form-group form-group col">
                <%= label_tag(:q, "Member ID:") %>
                <%= text_field_tag(:memberid, "",:class=>'form-control form-control-sm required')%>
              </div>
            </div>
          </div>
        </div>

        <div class="float-right">
          <%= submit_tag("Reset", { :name => 'reset', :id => 'reset', :type => 'reset', :class => 'btn btn-secondary'}) %>
          <%= submit_tag("Search", :class=>'btn btn-primary') %>
        </div>

        </form>
        <% end %>
      </div>
    </div>
  </div>

